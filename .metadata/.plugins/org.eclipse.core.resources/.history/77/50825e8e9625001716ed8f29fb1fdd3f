<%
	String id = request.getParameter("b_id");
	int b_id = 0;
	if(id != null){
		b_id = Integer.parseInt(id);
	}
	BoardService service = BoardService.getInstance();
	Board board = service.selectBoardService(b_id);
	
	request.setAttribute("board", board);
	
%>    

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="kosta.mapper.BoardMapper">
	<cache />
	<insert id="insertBoard" parameterType="Board">
		insert into board3(
			b_id, b_name, b_title, b_content, b_pwd, b_date, b_hit
		) values (
			#{b_id}, #{b_name}, #{b_title}, #{b_content}, #{b_pwd}, SYSDATE, 0
		)
	</insert>
	
	<select id="selectB_id" resultType="Integer">
		select max(b_id) from board3
	</select>
	
	<select id="listBoard" resultType="Board" parameterType="Search">
		select * from board3
		<if test="area != null">
			<where>
				<foreach collection="area" item="item" separator="OR" open="(" close=")">
					${item} LIKE #{searchKey}
				</foreach>
			</where>
		</if>
	</select>

	<select id = "selectBoard" parameterType="int" resultType="Board">
		select * from board3 where b_id=#{b_id}
	</select>
	
	<update id="updateHit" parameterType="int">
		update board3 set  b_hit = b_hit + 1 where b_id = #{b_id}
	</update>

	<select id="updateCheck" parameterType="Board" resultType="Integer">
		select count(b_id) from board3 where b_id=#{b_id} and b_pwd=#{b_pwd}
	</select>
	
	<update id="updateBoard" parameterType="Board">
		update board3 set b_name = #{b_name}, b_title = #{b_title},  b_content = #{b_content}
		where b_id = #{b_id}
	</update>
	
	<insert id="replyBoard" parameterType="Reply">
		insert into reply(
			r_num, r_title, r_writer, r_content, b_id
		) values(
			#{r_num}, #{r_title}, #{r_writer}, #{r_content}, #{b_id}
		)
	</insert>
	
	<select id="selectR_num" resultType="Integer">
		select max(r_num) from reply
	</select>
	
	<select id = "selectReplyBoard" parameterType="int" resultType="Reply">
		select * from reply where b_id=#{b_id}
	</select>
</mapper>















